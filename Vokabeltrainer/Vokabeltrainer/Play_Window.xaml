<Window x:Class="Vokabeltrainer.Play_Window"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Vokabeltrainer"
        mc:Ignorable="d"
        Title="Play_Window" Height="500" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <DockPanel Background="AliceBlue" Grid.Row="0" Grid.RowSpan="1" Grid.Column="0" Grid.ColumnSpan="4">
            <Label Content="Play" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="32" Margin="10"/>
        </DockPanel>
        <Label x:Name="FrontCard_Label" Content="Answer" Grid.Row="1" Grid.Column="1" FontSize="25"
               Grid.ColumnSpan="2" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Margin="10"/>
        <TextBox x:Name="FrontCard_Text" Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2" Margin="10" FontSize="20"/>
        <Label x:Name="BackCard_Label" Content="Solution" Grid.Row="3" Grid.Column="1" FontSize="25"
        Grid.ColumnSpan="2" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Margin="10"/>
        <TextBox x:Name="BackCard_Text" Grid.Row="4" Grid.Column="1" Grid.ColumnSpan="2" Margin="10" FontSize="20"/>
        <Button x:Name="ExitBtn" Content="Exit" Click="ExitBtn_Click" FontSize="20"/>
        <Button x:Name="SubmitBtn" Content="Submit" Grid.Column="3" FontSize="20" Click="SubmitBtn_Click"/>
    </Grid>
</Window>
