<Window x:Class="Vokabeltrainer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Vokabeltrainer"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.20*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <DockPanel x:Name="DockPanel" Grid.Column="0" Grid.RowSpan="2" Background="LightGray" >
            <StackPanel>
                <Label x:Name="TitleLabel" Content="Vokabeltrainer" Width="125" Background="Gray" FontSize="13" Margin="5"/>
                <Button x:Name="SelectBtn" Content="Select" Margin="5" Click="SelectBtn_Click"/>
                <Button x:Name="EditBtn" Content="Edit" Margin="5" Click="EditBtn_Click"/>
                <Button x:Name="DeleteBtn" Content="Delete" Margin="5" Click="DeleteBtn_Click"/>
                <Button x:Name="CreateBtn" Content="Create" Margin="5" Click="CreateBtn_Click"/>
                <Button x:Name="ExitBtn" Content="Exit" Height="40" Margin="5" Click="ExitBtn_Click"/>
            </StackPanel>
        </DockPanel>
        <WrapPanel Grid.Column="1" Grid.Row="0" Grid.RowSpan="2">
            <ListView x:Name="Flashcard_list" Background="AliceBlue"/>
        </WrapPanel>
    </Grid>
</Window>
