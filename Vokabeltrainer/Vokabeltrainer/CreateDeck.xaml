<Window x:Class="Vokabeltrainer.CreateDeck"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Vokabeltrainer"
        mc:Ignorable="d"
        Title="CreateDeck" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.30*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <DockPanel x:Name="DockPanel" Grid.Column="0" Grid.RowSpan="2" Background="LightGray" >
            <StackPanel>
                <Label x:Name="TitleLabel" Content="Vokabeltrainer" Width="140" Background="Gray" FontSize="20" Margin="5"/>
                <!--<Button x:Name="SelectBtn" Content="Select" Margin="5"/>-->
                <Button x:Name="EditBtn" Content="Edit" Margin="10" Height="30" FontSize="15" Click="EditBtn_Click"/>
                <Button x:Name="SaveBtn" Content="Save" Margin="10" FontSize="15"/>
                <Button x:Name="ExitBtn" Content="Exit" Height="40" Margin="10" FontSize="15" Click="ExitBtn_Click"/>
            </StackPanel>
        </DockPanel>
        <WrapPanel Grid.Column="1" Grid.Row="0" Grid.RowSpan="2">
            <TextBox x:Name="DeckName" Width="100" Background="Orange" />
        </WrapPanel>
    </Grid>
</Window>
